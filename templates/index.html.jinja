<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>leetRoute - Home</title>
    <link rel="icon" href="{{ url_for('static', filename='/images/favicon.ico') }}">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            margin: 0;
            background: #fafafa;
            -webkit-font-smoothing: antialiased;
        }

        .icon-location {
            background: url("{{ url_for('static', filename='/images/location.svg') }}");
            background-repeat: no-repeat;
            background-size: cover;
            display: inline-block;
            height: 1.2em;
            width: 1.2em;
        }

        #start-loc-container {
            display: flex;
        }

        #start-loc {
            flex-grow: 1;
        }

        #header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5em;
            padding: 1em;
            background: #fff;
            box-shadow: 0 2px 10px #0001;
            margin-bottom: 1.5em;
        }

        #header-logo {
            height: 1.8em;
            width: 1.8em;
            object-fit: contain;
        }

        #header h1 {
            margin: 0;
            font-size: 1.2em;
            font-weight: 600;
        }

        #locations-form-div {
            border: 2px solid black;
            border-radius: 6px;
            background: #fff;
            box-shadow: 2px 2px 10px #0002;
            padding: 1.5em;
            width: calc(100% - 2em);
            max-width: 600px;
            margin: 0 auto 1.5em auto;
        }

        form#locations-form {
            display: flex;
            flex-direction: column;
            gap: 0.75em;
        }

        form#locations-form label {
            font-weight: bold;
            font-size: 0.95em;
        }

        form#locations-form input[type="text"] {
            border: 1px solid #888;
            border-radius: 4px;
            padding: 0.6em;
            font-size: 1em;
            width: 100%;
            -webkit-appearance: none;
        }

        #search-button {
            background: #0078d7;
            color: white;
            border: none;
            padding: 0.75em 1em;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.2s;
            margin-top: 0.5em;
            font-size: 1em;
            -webkit-tap-highlight-color: transparent;
        }

        #search-button:hover {
            background: #005ea6;
        }

        #search-button:active {
            background: #004578;
        }

        #calculate-div {
            margin-top: 1em;
            display: flex;
            justify-content: center;
        }

        #calculate-button, button, input[type='button'] {
            background: #0078d7;
            color: white;
            border: none;
            padding: 0.75em 1.2em;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.2s;
            font-size: 1em;
            -webkit-tap-highlight-color: transparent;
        }

        #calculate-button:disabled, button:disabled, input[type='button']:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        #calculate-button:hover:enabled, button:hover:enabled, input[type='button']:hover:enabled {
            background: #005ea6;
        }

        #calculate-button:active:enabled, button:active:enabled, input[type='button']:active:enabled {
            background: #004578;
        }

        .error-block {
            border: 3px solid red;
            color: #622;
            background: #fff;
            border-radius: 6px;
            box-shadow: 2px 2px 10px #0002;
            padding: 1.5em;
            width: calc(100% - 2em);
            max-width: 600px;
            margin: 0 auto 1.5em auto;
            text-align: center;
        }

        .error-block h3 {
            margin-top: 0;
        }

        .search-results {
            height: 25em;
            overflow-y: auto;
            -webkit-overflow-scrolling: touch;
            padding: 0;
            border: 2px solid black;
            border-radius: 6px;
            background: #fff;
            box-shadow: 2px 2px 10px #0002;
            display: flex;
            flex-direction: column;
            gap: 0;
            width: calc(100% - 2em);
            max-width: 600px;
            margin: 0 auto 1.5em auto;
        }

        .search-header {
            position: sticky;
            top: 0;
            background: #fff;
            border-bottom: 2px solid black;
            padding: 0.75em 1em;
            z-index: 10;
        }

        .search-header h3 {
            margin: 0;
            font-size: 1em;
        }

        .search-result {
            border-bottom: 1px solid #ddd;
            padding: 1em;
            transition: background-color 0.15s;
            cursor: pointer;
            -webkit-tap-highlight-color: transparent;
            user-select: none;
            font-size: 0.95em;
        }

        .search-result:last-child {
            border-bottom: none;
        }

        .search-result.selected {
            background-color: #9f9;
        }

        .search-result:active {
            background-color: #ddd;
        }

        /* Tablet and larger */
        @media (min-width: 600px) {
            #header {
                padding: 1.2em 2em;
                margin-bottom: 2em;
            }

            #header-logo {
                height: 2em;
                width: 2em;
            }

            #header h1 {
                font-size: 1.4em;
            }

            #locations-form-div {
                padding: 2em;
                margin-bottom: 2em;
            }

            .error-block {
                padding: 2em;
                margin-bottom: 2em;
            }

            .search-results {
                height: 30em;
                padding: 0;
                margin-bottom: 2em;
            }

            .search-header {
                padding: 1em;
            }

            .search-header h3 {
                font-size: 1.17em;
            }

            .search-result {
                padding: 1em;
                border: none;
                margin: 0.5em 1em;
                border-radius: 5px;
                border: 2px solid black;
                font-size: 1em;
            }

            .search-result:hover {
                background-color: #bbb;
                transform: translateY(-3px);
            }

            .search-result:active {
                background-color: #ddd;
                transform: translateY(1px);
            }
        }

        /* Desktop */
        @media (min-width: 1024px) {
            .search-results {
                height: 35em;
            }
        }
    </style>
</head>

<body>
    <div id="header">
        <a href="/"><img id="header-logo" src="{{ url_for('static', filename='/images/favicon.ico') }}"></a>
        <h1>leetRoute v{{ version }}</h1>
    </div>

    <div id="locations-form-div">
        <form id="locations-form" action="/" method="get">
            <label for="start-loc">Start Location:</label>
            <div id="start-loc-container">
                <input type="text" id="start-loc" name="s">
            </div>

            <label for="dest-loc">Destination Location:</label>
            <input type="text" id="dest-loc" name="d">

            <input type="submit" id="search-button" value="Search Locations">
        </form>

        <div id="calculate-div">
            <input type="button" id="calculate-button" value="Calculate Route(s)" disabled>
        </div>
    </div>

    {% if start_res and dest_res %}
        <div class="search-results" id="start-results" submitted="false">
            <div class="search-header">
                <h3>Start Location Results</h3>
            </div>
            {% for choice in start_res.choices %}
                <p class="search-result" resulttype="start" index="{{ choice[1] }}">{{ choice[0] }}</p>
            {% endfor %}
        </div>

        <div class="search-results" id="dest-results" submitted="false">
            <div class="search-header">
                <h3>Destination Location Results</h3>
            </div>
            {% for choice in dest_res.choices %}
                <p class="search-result" resulttype="dest" index="{{ choice[1] }}">{{ choice[0] }}</p>
            {% endfor %}
        </div>
    {% elif start_res and not dest_res %}
        <div class="error-block">
            <h3>:(</h3>
            <p>Please provide both locations</p>
        </div>
    {% elif dest_res and not start_res %}
        <div class="error-block">
            <h3>:(</h3>
            <p>Please provide both locations</p>
        </div>
    {% endif %}

    <script>
        let startCoords = null;
        let destCoords = null;
        let calculateButton = document.getElementById("calculate-button");

        calculateButton.onclick = () => {
            window.location.assign(`/calculate?s=${startCoords.lon},${startCoords.lat}&d=${destCoords.lon},${destCoords.lat}`);
        };

        function checkSelected() {
            let startResults = document.querySelectorAll('.search-result[resulttype="start"]');
            let destResults = document.querySelectorAll('.search-result[resulttype="dest"]');
            let startSelected = Array.from(startResults).some(e => e.classList.contains("selected"));
            let destSelected = Array.from(destResults).some(e => e.classList.contains("selected"));
            return startSelected && destSelected;
        }

        document.querySelectorAll(".search-result").forEach((element) => {
            element.onclick = function (e) {
                let loctype = e.target.getAttribute("resulttype");
                let index = e.target.getAttribute("index");

                e.target.classList.toggle("selected");
                fetch(`/getLocationByIndex?i=${index}&t=${loctype}`)
                    .then(resp => {
                        if (!resp.ok) {
                            throw new Error(`HTTP error! Status code: ${resp.status}; ${resp.statusText}`);
                        }
                        return resp.json();
                    })
                    .then(data => {
                        if (data.loctype === "start" && e.target.classList.contains("selected")) {
                            startCoords = data.coords;
                        } else if (data.loctype === "dest" && e.target.classList.contains("selected")) {
                            destCoords = data.coords;
                        }
                        calculateButton.disabled = !checkSelected();
                    })
                    .catch(error => {
                        console.error('Error fetching data:', error);
                    });
            };
        });
    </script>
    <script>
        function checkLocationAbility(){
            if("gelocation" in navigator){
                return true
            } else {
                return false
            }
        }
        function getDevicePosition(){
            let pos;
            navigator.geolocation.getCurrentPosition((position) => {
                pos = position;
            })
            console.log(pos)
            return pos
        }
        function reverseGeocodeDevicePosition(){
            let position = getDevicePosition();
            let coords = position.coords;
            fetch(`https://photon.komoot.io/reverse?lon=${coords.longitude}&lat=${coords.latitude}`)
                .then(resp => {
                    if (!resp.ok) {
                        throw new Error(`HTTP error! Status code: ${resp.status}; ${resp.statusText}`);
                    }
                    return resp.json();
                })
                .then(data => {
                    console.log(data);
                })
                .catch(error => {
                        console.error('Error fetching data:', error);
                });
        }
    </script>
</body>

</html>